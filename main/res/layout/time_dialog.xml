<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:headerBackground="@drawable/rectangle_drawable"
        android:numbersBackgroundColor="@color/techOrange"
        android:numbersSelectorColor="@color/grey"
        android:numbersTextColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setTimeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="УСТАНОВИТЬ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker"
        android:background="@drawable/connect_button_backround"
        android:layout_margin="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>